model Lists {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  userId  String
  media     Media[]
}

model Media {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  mediaId   Int
  title     String
  type      String
  imageUrl  String
  list      Lists     @relation(fields: [listId], references: [id])
  listId    Int
}